            <div class="">
              <label for="inputEmail4" class="form-label">Name</label><span id="namevali"></span>
              <input type="text" id="nv" name="stuname" class="form-control"   placeholder="Enter Name" onkeyup="nameValidation(this.value)" onclick="nameValidation(this.value)">
