<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="student.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <script type="text/javascript" src="searchStudent.js"></script>
</head>
<body id="StudentTable">
    <%-include("mainmenu.ejs",{co:co})%>
    <div class="container">
        <br>
        <form class="d-flex w-50 ms-5 " id="btn">
            <input class="form-control me-2" type="search" placeholder="Search By Name" aria-label="Search" onkeyup="stuajaxcall(this.value)">
          
          </form>
        <br>

        <table class="table table-dark table-striped">
            <thead>
                <th><h3>Sr.No</h3></th>
                <th><h3>Name</h3></th>
                <th><h3>Contact</h3></th>
                <th><h3>Email</h3></th>
                <th><h3>Course</h3></th>
                <th><h3>Delete</h3></th>
                <th><h3>Update</h3></th>
            </thead>

            <tbody id="studentTable">
                <%
                   if(studentdata.length==0)
                   {
                %>
                   <th colspan="7"><h1 style="text-align: center;">Student Not Found</h1></th>
                <%
                   }
                   else
                   {
                    studentdata.forEach((item,index)=>{

                %>
                <tr>
                    <td><h5><%=(index+1)%></h5></td>
                    <td><h5><%=item.Name%></h5></td>
                    <td><h5><%=item.Contact%></h5></td>
                    <td><h5><%=item.Email%></h5></td>
                    <td><h5><%=item.Course_Name%></h5></td>
                    <td><h4><a href="/deleteStudent?id=<%=item.Student_id%>"><i class="fa-solid fa-trash "></i></a></h4></td>
                    <td><h4><a href="/updateStudent?id=<%=item.Student_id%>"><i class="fa-solid fa-file-pen"></i></a></h4></td>
                </tr>
                <%
                    });
                }
                %>
               
                
            </tbody>
        </table>
    </div>
</body>
</html>