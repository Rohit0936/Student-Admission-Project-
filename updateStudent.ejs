</head>
<body id="updatecourse">
 <%-include("mainmenu.ejs",{co:co})%>
    <h1 style="text-align: center;">ðŸŽ“ Student</h1>
    <div class="studentform">
        <form class="row g-3 " action="/studentUpdate" method="post">
            <div class="">
              <label for="inputEmail4" class="form-label">Name</label><span id="namevali"></span>
              <input type="text" id="nv" value="<%=studentdata.Name%>" name="stupuname" class="form-control"   placeholder="Enter Name" onkeyup="nameValidation(this.value)" onclick="nameValidation(this.value)">
            </div>
            <div class="">
              <label for="inputPassword4" class="form-label">Phone</label><span id="numvali"></span>
              <input type="number" value="<%=studentdata.Contact%>" name="stupunumber" class="form-control" id="inputPassword4" placeholder="Enter Number" onkeyup="numValidation(this.value)" onclick="setname()">
            </div>
            <div class="">
              <label for="inputAddress" class="form-label">Email</label><span id="emailvali"></span>
              <input type="text" value="<%=studentdata.Email%>" name="stuupemail" class="form-control" id="inputAddress" placeholder="Enter Email" onkeyup="emailValidation(this.value)">
            </div>
            
            <div class="col-md-4">
              <label for="inputState"  class="form-label w-100" placeholder="Enter Course">State</label>
              <select id="inputState" value="<%=studentdata.Course_Id%>" name="stuupcourse" class="se">
                <option selected>Select Course</option>
                <%
                co.forEach((item,index)=>{
                %>
                <option value="<%= item.Course_Id%>" ><%=item.Course_Name%></option>
                <%
                });
                %>
              </select>
            </div>
            
            <div class="" style="text-align: center;">
              <button type="submit" class="btn btn-primary ">Update</button>
            </div>
          </form>
    </div>
    
</body>
</html>